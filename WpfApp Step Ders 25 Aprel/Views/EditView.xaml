<Window x:Class="WpfApp_Step_Ders_25_Aprel.Views.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Step_Ders_25_Aprel.Views"
        mc:Ignorable="d"
        Title="EditView" Height="450" Width="800">
    <StackPanel Width="400">
        <Label Margin="5" FontSize="26">Model</Label>
        <TextBox Text="{Binding EditPrinter.Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="26"></TextBox>
        
        <Label Margin="5" FontSize="26">Vendor</Label>
        <TextBox Text="{Binding EditPrinter.Vendor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="26"></TextBox>

        <Label Margin="5" FontSize="26">Color</Label>
        <TextBox Text="{Binding EditPrinter.Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="26"></TextBox>

        <Button Margin="10" FontSize="26" FontWeight="SemiBold" Command="{Binding SaveCommand}">Save Me</Button>
        
    </StackPanel>
</Window>
